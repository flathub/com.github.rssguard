{
    "id": "com.github.rssguard",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "rssguard",
    "rename-icon": "rssguard",
    "finish-args": [ "--device=dri",
                     "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=xdg-download",
                     "--talk-name=org.kde.StatusNotifierWatcher",
                     "--talk-name=org.freedesktop.Notifications" ],
    "modules": [
        {
            "name": "rssguard",
            "buildsystem": "qmake",
            "post-install": [
                "install -d /app/share/icons/hicolor/512x512/apps",
                "install -m644 /app/share/pixmaps/rssguard.png /app/share/icons/hicolor/512x512/apps/rssguard.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/martinrotter/rssguard/archive/3.5.6.tar.gz",
                    "sha256": "8429b20e44fd394d6d053ed87b7e71ced9795f0d1b448621c475421f0e2daafa"
                }
            ]
        }
    ]
}
