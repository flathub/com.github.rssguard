{
    "id": "com.github.rssguard",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "rssguard",
    "rename-icon": "rssguard",
    "finish-args": [ "--device=dri",
                     "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=xdg-download",
                     "--talk-name=org.kde.StatusNotifierWatcher",
                     "--talk-name=org.freedesktop.Notifications" ],
    "modules": [
        {
            "name": "rssguard",
            "buildsystem": "qmake",
            "post-install": [
                "install -d /app/share/icons/hicolor/512x512/apps",
                "install -m644 /app/share/pixmaps/rssguard.png /app/share/icons/hicolor/512x512/apps/rssguard.png"
            ],
            "sources": [
                {
                    "branch": "3.5.7",
                    "type": "git",
                    "commit": "c28dc5a32253250847ca09ea6ba49aa5ee813f1a",
                    "url": "git://github.com/martinrotter/rssguard.git"
                }
            ]
        }
    ]
}
